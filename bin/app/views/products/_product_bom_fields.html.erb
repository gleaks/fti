<div class="row nested-fields">
  <div class="form-group col-sm-6">
    <%= f.label :assembly_id %>
    <%= f.collection_select :assembly_id, @assemblies, :id, :name, {}, { :class=>'form-control' } %>
  </div>
  <div class="form-group col-sm-4">
    <%= f.label :count %>
    <%= f.text_field :count, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-2">
    <br>
    <i class="material-icons">clear</i><%= link_to_remove_association "Remove assembly", f %>
  </div>
</div>