<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item">Orders</li>
</ol>

<div class="container-fluid">
    <div id="ui-view">
        <div>
            <p id="notice"><%= notice %></p>
            <div class="animated fadeIn">
                <div class="card">
                    <div class="card-header">
                        Order List
                        <div class="card-header-actions">
                          <%= link_to new_order_path, class: 'card-header-action' do %>
                            Create New Order
                          <% end %>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="orders-table" class="table table-responsive-sm table-bordered table-striped table-sm">
                          <thead>
                            <tr>
                              <th>Name</th>
                              <th>Date</th>
                              <th>Delivery</th>
                              <th>Payment</th>
                              <th>Warranty</th>
                              <th>Category</th>
                              <th>Customer</th>
                              <th></th>
                            </tr>
                          </thead>
                        
                          <tbody>
                            <% @orders.each do |order| %>
                              <tr>
                                <td>
                                    <%= link_to order do %> 
                                        <%= order.name %>
                                    <% end %>
                                </td>
                                <td><%= order.date %></td>
                                <td><%= order.delivery %></td>
                                <td><%= order.payment %></td>
                                <td><%= order.warranty %></td>
                                <td><%= order.category.name %></td>
                                <td>
                                    <%= link_to customer_path(order.customer.id) do %> 
                                        <%= order.customer.name %>
                                    <% end %>
                                </td>
                                <td><%= link_to 'Edit', edit_order_path(order) %> | <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br>


