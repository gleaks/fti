<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/">Home</a>
  </li>
  <li class="breadcrumb-item"><%= link_to 'Orders', orders_path %></li>
  <li class="breadcrumb-item">Order #<%= @order.id %></li>
</ol>
<div class="container-fluid">
  <div id="ui-view">
    <div>
      <div class="card">
        <div class="card-header">Order
          #<%= @order.id %> - <strong><%= @order.name %></strong>
          <a class="btn btn-sm btn-success float-right mr-1 d-print-none" href="#" onclick="javascript:window.print();">
            <i class="material-icons md-12">print</i> Print</a>
          <a class="btn btn-sm btn-info float-right mr-1 d-print-none" href="#">
            <i class="material-icons md-12">picture_as_pdf</i> Export to PDF</a>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <% @order.order_boms.each do |bom| %>
              <% bom.count.times do |b| %>
                <% bom.product.product_boms.each do |a| %>
                  <% a.count.times do |i| %>
                    <% location = bom.product.id.to_s + '-' + a.assembly.id.to_s + '-' + b.to_s + '-' + i.to_s %>
                    <li class="list-group-item list-group-item-action align-items-start flex-column">
                      <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-3"><%= a.assembly.fullname %></h5>
                        <small id="update-<%= location %>">Updated:
                          <% if a.assembly.modulelogs.where(order_id: @order.id).count == 0 %>
                            Never
                          <% else %>
                            <%= time_ago_in_words(a.assembly.modulelogs.where(order_id: @order.id).first.updated_at) %> ago
                          <% end %>
                        </small>
                      </div>
                      <% if a.assembly.modulelogs.where(order_id: @order.id).count > 0 %>
                        <div class="mb-3 progress">
                          <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuemin="0" aria-valuemax="100" aria-valuenow="75">
                            75%
                          </div>
                        </div>
                      <% end %>
                      <div>
                        <div class="float-left">
                          <% if a.assembly.modulelogs.where(order_id: @order.id).count == 0 %>
                            Currently <strong><mark>unassigned</mark></strong>
                          <% else %>
                            hello! <%= a.assembly.modulelogs.where(order_id: @order.id).to_ary %>
                          <% end %>
                        </div>
                        <div class="float-right btn-group btn-group-sm" role="group">
                          <%= form_with model: Modulelog.first do |form| %>
                            <%= form.hidden_field :order_id, :value => @order.id %>
                            <%= form.hidden_field :location, :value => 'update-' + a.assembly.id.to_s + '-' + b.to_s + '-' + i.to_s %>
                            <%= form.collection_select :modulelog_id, a.assembly.modulelogs.where(assembly_id: a.assembly.id).order(serial: :desc), :id, :name, {:include_blank=>'Assignment'}, {:class=>'form-control s2'} %>
                          <% end %>
                          <button class="btn btn-secondary" type="button">Progress</button>
                        </div>
                      </div>
                    </li>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
