<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item"><%= link_to 'Orders', orders_path %></li>
    <li class="breadcrumb-item">Order #<%= @order.id %></li>
</ol>

<div class="container-fluid">
    <div id="ui-view">
        <div>
          <p id="notice"><%= notice %></p>
          <div class="animated fadeIn">
            <div class="row">
              <div class="col-sm-12 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        Order Information
                        <div class="card-header-actions">
                          <%= link_to 'Edit Order', edit_order_path(@order), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <li class="list-group-item">
                          <b>Quote #</b> <span class="float-right"><%= @order.id %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Name</b> <span class="float-right"><%= @order.name %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Date</b> <span class="float-right"><%= @order.date %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Payment</b> <span class="float-right"><%= @order.payment %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Warranty</b> <span class="float-right"><%= @order.warranty %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Delivery</b> <span class="float-right"><%= @order.delivery %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Category</b> <span class="float-right"><%= @order.category.name %></span>
                        </li>
                      </ul>
                    </div>
                </div>
              </div>
              <div class="col-sm-12 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        Customer Details
                        <div class="card-header-actions">
                          <%= link_to 'Edit Customer', edit_customer_path(@order.customer.id), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <li class="list-group-item">
                          <b>Name</b> <span class="float-right"><%= @order.customer.name %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Contact</b> <span class="float-right"><%= @order.customer.contact %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Address</b> <span class="float-right"><%= @order.customer.address %></span>
                        </li>
                      </ul>
                    </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        Order Item List
                        <div class="card-header-actions">
                          <%= link_to 'Edit Order', edit_order_path(@order), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <% @order.order_boms.each do |bom| %>
                          <li class="list-group-item">
                          <b><%= link_to product_path(bom.product.id) do %>
                            <%= bom.product.name %> (<%= bom.product.id %>)</b>
                          <% end %>
                          <span class="float-right"><%= bom.count %>x | $<%= bom.product.price %> each</span>
                        </li>
                        <% end %>
                      </ul>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>