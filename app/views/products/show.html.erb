<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item"><%= link_to 'Products', products_path %></li>
    <li class="breadcrumb-item">Product #<%= @product.id %></li>
</ol>

<div class="container-fluid">
    <div id="ui-view">
        <div>
          <p id="notice"><%= notice %></p>
          <div class="animated fadeIn">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        Product Information
                        <div class="card-header-actions">
                          <%= link_to 'Edit Product', edit_product_path(@product), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <li class="list-group-item">
                          <b>FTI Part #</b> <span class="float-right"><%= @product.id %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Name</b> <span class="float-right"><%= @product.name %></span>
                        </li>
                        <li class="list-group-item">
                          <b>Price</b> <span class="float-right">$<%= @product.price %></span>
                        </li>
                      </ul>
                    </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        BOM - Need On These Orders
                        <div class="card-header-actions">
                          <%= link_to 'Edit BOM', edit_product_path(@product), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <% @product.order_boms.each do |bom| %>
                          <li class="list-group-item">
                          <b><%= link_to order_path(bom.order.id) do %>
                            <%= bom.order.name %> | <%= bom.order.customer.name %> (<%= bom.order.id %>)</b>
                          <% end %>
                          <span class="float-right"><%= bom.count %>x</span>
                        </li>
                        <% end %>
                      </ul>
                    </div>
                </div>
              </div>
              <div class="col-sm-12 col-xl-6">
                <div class="card">
                    <div class="card-header">
                        BOM - Needs These Assemblies
                        <div class="card-header-actions">
                          <%= link_to 'Edit BOM', edit_product_path(@product), class: 'card-header-action' %>
                        </div>
                    </div>
                    <div class="card-body">
                      <ul class="list-group">
                        <% @product.product_boms.each do |bom| %>
                          <li class="list-group-item">
                          <b><%= link_to assembly_path(bom.assembly.id) do %>
                            <%= bom.assembly.name %> (<%= bom.assembly.id %>)</b>
                          <% end %>
                          <span class="float-right"><%= bom.count %>x</span>
                        </li>
                        <% end %>
                      </ul>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>