<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Home</a>
    </li>
    <li class="breadcrumb-item">Material Status</li>
</ol>

<div class="container-fluid">
    <div id="ui-view">
        <div>
            <div class="animated fadeIn">
                <div class="card">
                    <div class="card-header">
                        Material Status
                    </div>
                    <div class="card-body">
                        <table id="material-table" class="table table-responsive-sm table-bordered table-sm">
                           <thead>
                            <tr>
                                <% @modules.each do |m| %>
                                    <th><%= m %>
                                <% end %>
                            </tr>
                          </thead>
                        
                          <tbody>
                            <% @orders.each do |order| %>
                              <tr>
                                <% order.each do |o| %>
                                    <td><%= o %></td>
                                <% end %>
                              </tr>
                            <% end %>
                            <tr style="background-color: rgba(32, 106, 216, 0.5);">
                                <td>Shippable Inventory</td>
                                <% @tested.each do |t| %>
                                    <td><%= t %></td>
                                <% end %>
                            </tr>
                            <tr style="background-color: rgba(120, 32, 216, 0.49);">
                                <td>In Bring-up</td>
                                <% @bringup.each do |b| %>
                                    <td><%= b %></td>
                                <% end %>
                            </tr>
                            <tr style="background-color: rgba(216, 32, 170, 0.5);">
                                <td>Assembled</td>
                                <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
                            </tr>
                            <tr style="background-color: rgba(216, 83, 32, 0.5);">
                                <td>In-House Assembly</td>
                                <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
                            </tr>
                            <tr style="background-color: rgba(32, 208, 216, 0.5);">
                                <td>Vendor Assembly</td>
                                <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
                            </tr>
                            <tr style="background-color: rgba(213, 216, 32, 0.5);">
                                <td>Ordered</td>
                                <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
                            </tr>
                            <tr>
                                <td><b><i>Material Balance</b></i></td>
                                <td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>
                            </tr>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
