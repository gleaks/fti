<div class="row nested-fields">
  <div class="form-group col-sm-4">
    <%= f.label :part_id %>
    <%= f.collection_select :part_id, @parts, :id, :description, {}, { :class=>'form-control' } %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label :count %>
    <%= f.text_field :count, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label :refdes %>
    <%= f.text_field :refdes, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-2">
    <br>
    <i class="material-icons">clear</i><%= link_to_remove_association "Remove part", f %>
  </div>
</div>