<div class="container">
   <div class="row justify-content-center">
      <div class="col-md-4">
         <div class="card p-4">
            <div class="card-body">
               <h1>Login</h1>
               <p class="text-muted">FTI requires sign-in for access</p>
               <%= form_tag sessions_path do |form| %>
                   <div class="input-group mb-3">
                      <div class="input-group-prepend">
                         <span class="input-group-text">
                            <i class="material-icons md-18">account_circle</i>
                         </span>
                      </div>
                      <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username' %>
                   </div>
                   <div class="input-group mb-4">
                      <div class="input-group-prepend">
                         <span class="input-group-text">
                            <i class="material-icons md-18">lock</i>
                         </span>
                      </div>
                      <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
                   </div>
                   <div class="row">
                      <div class="col-6">
                         <%= submit_tag 'Login', class: 'btn btn-primary px-4' %>
                      </div>
                   </div>
               <% end %>
            </div>
         </div>
      </div>
   </div>