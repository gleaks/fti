<%= form_with(model: customer, local: true) do |form| %>
  <div class="card-body">
    <% if customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
        <ul>
          <% customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group row">
      <%= form.label :name, class: 'col-md-3 col-form-label' %>
      <div class="col-md-9">
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :contact, class: 'col-md-3 col-form-label' %>
      <div class="col-md-9">
        <%= form.text_field :contact, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :address, class: 'col-md-3 col-form-label' %>
      <div class="col-md-9">
        <%= form.text_field :address, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
